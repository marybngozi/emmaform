<%- include('layouts/header'); -%>
<%- include('layouts/nav'); -%>

<h1 class="font-bold text-2xl underline text-center">
	EMMA DUNAMIX INVESTMENT CONCERT LIMITED
</h1>
<main class="flex">
	<!-- forms table section -->
	<table class=" mt-3 w-7/12 mx-auto">
		<thead>
			<tr>
				<th class="border border-blue-500 px-6 py-3 text-left text-base font-bold text-gray-500 uppercase">
					S/N
				</th>
				<th class="border border-blue-500 px-6 py-3 text-left text-base font-bold text-gray-500 uppercase">
					Employee
				</th>
				<th class="border border-blue-500 px-6 py-3 text-left text-base font-bold text-gray-500 uppercase">
					Position
				</th>
				<th class="border border-blue-500 px-6 py-3 text-left text-base font-bold text-gray-500 uppercase">
					Manage
				</th>
			</tr>
		</thead>
		<tbody>
			<% if(!forms.length){ %>
				<tr>
					<td colspan="3" class="border border-blue-500 text-center text-gray-400">
						No Employee found!
					</td>
				</tr>
			<% } %>
			<!-- dsiplay the forms -->
			<% forms.forEach((form, i) => { %>
			<tr>
				<td class="border border-blue-500 px-6 py-4 text-md">
					<%= i+1 %>
				</td>

				<td class="border border-blue-500 px-6 py-4">
					<span class="text-md">
						<%= form.firstName %> <%= form.otherName %> <%= form.lastName %>
					</span>
				</td>

				<td class="border border-blue-500 px-6 py-4">
					<span class="text-md">
						<%= form.positionInCompany %>
					</span>
				</td>

				<td class="flex justify-evenly border border-blue-500 px-6 py-4 text-sm">
					<a class="py-1 px-4 bg-green-500 text-white" href="/view-form/<%= form.id %>">View</a>

					<a class="py-1 px-4 bg-blue-500 text-white" href="/edit-form/<%= form.id %>">Edit</a>

					<a class="py-1 px-4 bg-red-500 text-white" href="/delete-form/<%= form.id %>">Delete</a>
				</td>
			</tr>
			<% } ) %>
		</tbody>
	</table>
</main>
<%- include('layouts/footer'); -%>
